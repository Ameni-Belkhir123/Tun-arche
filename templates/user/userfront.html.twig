
{% extends 'front1/base.html.twig' %}
{% block body %}

    <style>
    
        
        h1 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
            font-size: 2.5em;
        }
        .section-title {
            color: #2c3e50;
            font-size: 1.5em;
            border-bottom: 2px solid #2c3e50;
            padding-bottom: 5px;
            margin-top: 20px;
            margin-bottom: 10px;
        }
        .user-info {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
        }
        .user-info div {
            flex: 1 1 45%;
            padding: 10px;
            background-color: #f2f2f2;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }
        .user-info div strong {
            display: block;
            font-size: 1.1em;
            color: #2c3e50;
            margin-bottom: 5px;
        }
        .user-info div span {
            font-size: 1em;
            color: #555;
        }
        .contact-info {
            margin-top: 20px;
        }
        .contact-info p {
            margin: 5px 0;
            font-size: 1em;
            color: #555;
        }
        .contact-info p strong {
            color: #2c3e50;
        }
    </style>

     <br> <br> <br> <br> <br>
        <h1>{{ user.name }} {{ user.lastName }}</h1>
        
        <!-- Personal Information Section -->
        <div class="section-title">Personal Information</div>
        <div class="user-info"> 
            <div>
                <strong>Name</strong>
                <span>{{ user.name }}</span>
            </div>
            <div>
                <strong>Last Name</strong>
                <span>{{ user.lastName }}</span>
            </div>
            <div>
                <strong>Role</strong>
                <span>{{ user.role }}</span>
            </div>
        </div>

        <!-- Contact Information Section -->
        <div class="section-title">Contact Information</div>
        <div class="contact-info">
            <p><strong>Email:</strong> {{ user.email }}</p>
        </div>

  <br> <br> <br> <br> <br>
{% endblock %}