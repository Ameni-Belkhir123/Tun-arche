<!DOCTYPE html>

<title>Publication index</title>

{% block body %}
    <h1>Publication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>Date_act</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.id }}</td>
                <td>{{ publication.titre }}</td>
                <td>{{ publication.description }}</td>
                <td>{{ publication.image }}</td>
                <td>{{ publication.dateAct ? publication.dateAct|date('Y-m-d') : '' }}</td>
                
                <td>
                    <a href="{{ path('app_pub_show', {'id': publication.id}) }}" class="btn btn-info btn-sm">
    <i class="fas fa-eye"></i> Show
</a>
<a href="{{ path('app_pub_edit', {'id': publication.id}) }}" class="btn btn-warning btn-sm">
    <i class="fas fa-edit"></i> Edit
</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
