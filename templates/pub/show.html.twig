{% extends "back/base.html.twig"%}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ publication.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                {% if publication.image %}
                <td><div class="text-center">
                 <img src="{{ asset('uploads/images/' ~ publication.image) }}" alt="Post Image" class="img-fluid rounded post-image">
                </div></td>
                {% else %}
    <p>Aucune image disponible</p>
{% endif %}
            </tr>
            <tr>
                <th>Date_act</th>
                <td>{{ publication.dateAct ? publication.dateAct|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pub_index') }}" class="btn btn-secondary btn-sm">
    <i class="fas fa-arrow-left"></i> Back to List
</a>

<a href="{{ path('app_pub_edit', {'id': publication.id}) }}" class="btn btn-warning btn-sm">
    <i class="fas fa-edit"></i> Edit
</a>


    {{ include('pub/_delete_form.html.twig') }}
{% endblock %}
