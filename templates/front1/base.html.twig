<!DOCTYPE html>
<html lang="en">
<head>
  {% block css %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TUN'ARCHE</title>
    <link href="{{ asset('front1/layout/styles/layout.css') }}" rel="stylesheet" type="text/css" media="all">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      /* Profile Picture */
      .profile-pic {
        display: inline-block;
        vertical-align: middle;
        width: 50px;
        height: 50px;
        overflow: hidden;
        border-radius: 50%;
      }
      .profile-pic img {
        width: 100%;
        height: auto;
        object-fit: cover;
      }
      .profile-menu .dropdown-menu {
        right: 0;
        left: unset;
      }
      .profile-menu .fa-fw {
        margin-right: 10px;
      }
      .toggle-change::after {
        border-top: 0;
        border-bottom: 0.3em solid;
      }
    </style>
  {% endblock %}
</head>
<body id="top">
{% block header %}
  <div class="wrapper row1">
    <header id="header" class="hoc clear">
      <div id="logo" class="fl_left">
        <a href="{{ path('app_event_indexfront') }}">
          <img src="{{ asset('front1/images/logo.png') }}" alt="Logo Tun'Arche" style="height: 50px; vertical-align: middle;">
          <h1 class="logoname" style="display: inline-block; margin-left: 10px;">TUN'ARCHE</h1>
        </a>
      </div>
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                  aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_event_indexfront') }}">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('front_galerie_index') }}">Explore</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Formations</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('front_concours_index') }}">Concours</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_event_indexfront') }}">Evenements</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Blog</a>
              </li>
            </ul>

            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 profile-menu">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                  <div class="profile-pic">
                    <img src="{{ asset('front1/images/ava.jpg') }}" alt="Profile Picture">
                  </div>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li>
                    <a class="dropdown-item" href="#">
                      <i class="fas fa-sliders-h fa-fw"></i> {{ app.user.lastName }} {{ app.user.name }}
                    </a>
                  </li>
                  <li><a class="dropdown-item" href="#"><i class="fas fa-cog fa-fw"></i> Settings</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt fa-fw"></i> Log Out</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  </div>
  <br><br><br><br><br>
{% endblock %}
{% block content %}{% endblock %}
{% block footer %}
  <div class="bgded overlay row4" style="background-image:url('{{ asset('front1/images/demo/backgrounds/twill.jpg') }}');">
    <footer id="footer" class="hoc clear">
      <div class="one_quarter first">
        <h1 class="logoname"><a href="{{ path('app_event_indexfront') }}">Tunâ€™Arche</a></h1>
        <ul class="faico clear">
          <li><a class="faicon-facebook" href="#"><i class="fab fa-facebook"></i></a></li>
          <li><a class="faicon-google-plus" href="#"><i class="fab fa-google-plus-g"></i></a></li>
          <li><a class="faicon-linkedin" href="#"><i class="fab fa-linkedin"></i></a></li>
          <li><a class="faicon-twitter" href="#"><i class="fab fa-twitter"></i></a></li>
          <li><a class="faicon-vk" href="#"><i class="fab fa-vk"></i></a></li>
        </ul>
      </div>
    </footer>
  </div>
{% endblock %}
<div class="wrapper row5"></div>
{% block js %}
  <script src="{{ asset('front1/layout/scripts/jquery.min.js') }}"></script>
  <script src="{{ asset('front1/layout/scripts/jquery.backtotop.js') }}"></script>
  <script src="{{ asset('front1/layout/scripts/jquery.mobilemenu.js') }}"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.querySelectorAll('.dropdown-toggle').forEach(item => {
      item.addEventListener('click', event => {
        if (event.target.classList.contains('dropdown-toggle')) {
          event.target.classList.toggle('toggle-change');
        } else if (event.target.parentElement.classList.contains('dropdown-toggle')) {
          event.target.parentElement.classList.toggle('toggle-change');
        }
      })
    })
  </script>
  <a id="backtotop" href="#top"><i class="fas fa-chevron-up"></i></a>
{% endblock %}
</body>
</html>
