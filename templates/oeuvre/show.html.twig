{% extends "back/base.html.twig" %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2>Oeuvre Details</h2>
            </div>
            <div class="card-body">
                {% if oeuvre.image %}
                    <div class="mb-3 text-center">
                        <img src="{{ oeuvre.image }}" alt="Oeuvre Image" class="img-fluid" style="max-height:300px;">
                    </div>
                {% endif %}
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ oeuvre.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ oeuvre.titre }}</td>
                    </tr>
                    <tr>
                        <th>Galerie</th>
                        <td>{{ oeuvre.galerie ? oeuvre.galerie.nom : 'No Galerie' }}</td>
                    </tr>
                    <tr>
                        <th>Artist</th>
                        <td>{{ oeuvre.artist ? oeuvre.artist.getFullName() : 'No Artist' }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td style="white-space: pre-wrap;">{{ oeuvre.description }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-center mt-3">
                    <a href="{{ path('app_oeuvre_index') }}" class="btn btn-primary mx-2">Back to List</a>
                    <a href="{{ path('app_oeuvre_edit', {'id': oeuvre.id}) }}" class="btn btn-warning mx-2">Edit</a>
                    {{ include('oeuvre/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
