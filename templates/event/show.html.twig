{% extends 'back/base.html.twig' %}

{% block body %}
<br>
<br>
    <div class="container mt-4">
        <h1 class="mb-4">Event Details</h1>

        <!-- Event Details Table -->
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ event.id }}</td>
                        </tr>
                        <tr>
                            <th>Name Event</th>
                            <td>{{ event.nameEvent }}</td>
                        </tr>
                        <tr>
                            <th>Start Date</th>
                            <td>{{ event.dateStart ? event.dateStart|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>End Date</th>
                            <td>{{ event.dateEnd ? event.dateEnd|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Place</th>
                            <td>{{ event.placeEvent }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ event.discription }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ event.price }}</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_event_index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>

                </div>
            </div>
        </div>
    </div>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

{% endblock %}
