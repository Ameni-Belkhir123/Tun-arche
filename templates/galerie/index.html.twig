{% extends "back/base.html.twig" %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Galerie Index</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for galerie in galeries %}
                    <tr>
                        <td>{{ galerie.id }}</td>
                        <td>{{ galerie.nom }}</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="{{ path('app_galerie_show', {'id': galerie.id}) }}" class="btn btn-primary mx-2">Show</a>
                                <a href="{{ path('app_galerie_edit', {'id': galerie.id}) }}" class="btn btn-info mx-2">Edit</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No galleries found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a href="{{ path('app_galerie_new') }}" class="btn btn-success px-4">Create New</a>
        </div>
    </div>
{% endblock %}
