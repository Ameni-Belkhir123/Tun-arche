{% extends 'front1/base.html.twig' %}

{% block title %}{{ concours.titre }}{% endblock %}

{% block content %}
    <div class="container mt-5">
        {# Display any error flash messages inline #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card shadow-lg p-4">
            <div class="card-body">
                <h2 class="card-title text-center mb-3">{{ concours.titre }}</h2>
                <p class="text-muted text-center">
                    Du <strong>{{ concours.dateDebut|date('d/m/Y') }}</strong> au <strong>{{ concours.dateFin|date('d/m/Y') }}</strong>
                </p>
                <hr>
                <p class="card-text">{{ concours.description }}</p>
                <div class="text-center mt-4">
                    {% if is_granted('ROLE_ARTIST') %}
                        <a href="{{ path('front_participer', {'id': concours.id}) }}" class="btn btn-primary me-2">Participer</a>
                    {% endif %}
                    <a href="{{ path('front_concours_vote', {'id': concours.id}) }}" class="btn btn-secondary me-2">Voter</a>
                    <a href="{{ path('front_concours_index') }}" class="btn btn-info">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
