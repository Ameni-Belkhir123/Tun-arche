{% extends "back/base.html.twig" %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3>Create New Formation</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.titre) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.datedebut) }}
                                {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.datedebut) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.datefin) }}
                                {{ form_widget(form.datefin, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.datefin) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.nbrplaces) }}
                                {{ form_widget(form.nbrplaces, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nbrplaces) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.link) }}
                                {{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.link) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.imageFile) }}
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.imageFile) }}
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
                            <a href="{{ path('app_formation_index') }}" class="btn btn-secondary ms-2">Back</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
