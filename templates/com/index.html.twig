{% extends "back/base.html.twig" %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Commantaire index</h1>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Contenu</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commantaire in commantaires %}
                    <tr>
                        <td>{{ commantaire.id }}</td>
                        <td>{{ commantaire.contenu ? commantaire.contenu : 'Aucun commentaire' }}</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_com_show', {'id': commantaire.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_com_edit', {'id': commantaire.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">Aucun commentaire trouv√©</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}