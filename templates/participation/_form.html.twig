{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'shadow p-4 rounded'}}) }}
<div class="mb-3">
    {{ form_label(form.artist, 'Artiste', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.artist, {'attr': {'class': 'form-control'}}) }}
</div>
{% if form.oeuvre is defined %}
    <div class="mb-3">
        {{ form_label(form.oeuvre, 'Oeuvre', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.oeuvre, {'attr': {'class': 'form-control'}}) }}
    </div>
{% endif %}
<div class="mb-3">
    {{ form_label(form.imageFile, 'Image', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="text-center">
    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
