{% extends "front1/base.html.twig" %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-lg-6 offset-lg-3">
				<div class="card shadow-lg p-4">
					<div class="card-body">
						<h2 class="text-center mb-4">Inscription au concours</h2>
						<p class="text-center text-muted">
							<strong>{{ concour.titre }}</strong><br>
							Du
							<strong>{{ concour.dateDebut|date('d/m/Y') }}</strong>
							au
							<strong>{{ concour.dateFin|date('d/m/Y') }}</strong>
						</p>

						{{ form_start(form) }}
						<div class="mb-3">
							{{ form_label(form.nom) }}
							{{ form_widget(form.nom) }}
						</div>
						<div class="mb-3">
							{{ form_label(form.email) }}
							{{ form_widget(form.email) }}
						</div>
						<div class="text-center">
							{{ form_widget(form.submit) }}
						</div>
						{{ form_end(form) }}

						<div class="text-center mt-3">
							<a href="{{ path('app_concours_show', {'id': concour.id}) }}" class="btn btn-secondary">Retour</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
